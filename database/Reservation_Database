CREATE TABLE IF NOT EXISTS 'seats_free' (
  'train_id' int(11) NOT NULL,
  'seg_id' int(11) NOT NULL,
  'date' date NOT NULL,
  'seats_free' int(11) NOT NULL, /*448 seats available + 20 First class seats = 468 seats for both*/
  'free_first_class' int(11) NOT NULL,  /*20 available first class seats*/
  PRIMARY KEY ('train_id','seg_id','date'),
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

